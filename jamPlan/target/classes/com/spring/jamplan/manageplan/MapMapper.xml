<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 
CREATE TABLE PLANMAP(
PLANNO NUMBER NOT NULL,
ID VARCHAR2(50),
USERCOLOR VARCHAR2(50),
MAPCOUNT NUMBER DEFAULT 0,
LOCATION VARCHAR2(100)
);
 -->
 
<mapper namespace="com.spring.jamplan.manageplan.MapMapper">
	
	<resultMap type="com.spring.jamplan.model.MapVO" id="mapMemberResultMap">
		<result property="planNo" column="PLANNO" />
		<result property="id" column="ID" />
		<result property="userColor" column="USERCOLOR" />
		<result property="mapCount" column="MAPCOUNT" />
		<result property="location" column="LOCATION" />
	</resultMap>
	
	<select id="getPickList" resultMap="mapMemberResultMap">
		select * from planMap 
	</select>
	
	<insert id="insertMember" parameterType="com.spring.jamplan.model.MapVO" >
		insert into planMap values
			(#{planNo, javaType=int}, #{id, javaType=String}, #{userColor, javaType=String},
			 	#{mapCount, javaType=int}, #{location, javaType=String})
	</insert>
	
	<select id="pickMemberCount" parameterType="String">
		select count(*) from planMap where id=#{id, javaType=String} 
	</select>
	
	<delete id="deleteMember" parameterType="String">
		delete planMap where id=#{id, javaType=String} 
	</delete>
	<!-- (+)and location=#{location} -->
	
	<!-- 지도오른쪽리스트 : 
	 	select location from placeMap where (rownum<=10 :TOP10일땐)
	 		order by mapCount desc
	 -->
</mapper> 
 