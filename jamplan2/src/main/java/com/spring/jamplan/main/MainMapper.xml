<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<!-- 
CREATE OR PLACE VIEW v_TEAM(ID, TEAMNO, ISTEAMLEADER, PLANNO, TEAMNAME)
AS
SELECT ID, TEAMNO, ISTEAMLEADER, PLANNO, TEAMNAME
FROM TEAM
 -->
 
<!-- 
CREATE OR PLACE VIEW v_PLAN(PLANNO, TEAMNO, PLANNAME)
AS
SELECT PLANNO, TEAMNO, PLAN
 -->
<mapper namespace="com.spring.jamplan.main">
	<resultMap type="UserVO" id="userResultMap">
		<result property="id" column="id" />
		<result property="email" column="email" />
		<result property="pass" column="pass" />
		<result property="idAdmin" column="idAdmin" />
		<result property="signDate" column="signDate" />
		<result property="nation" column="nation" />
		<result property="gender" column="gender" />
		<result property="age" column="age" />
		<result property="snsSite" column="snsSite" />
		<result property="travelType" column="travelType" />
		<result property="image" column="image" />
		<result property="hobby" column="hobby" />
	</resultMap>

	<select id="getUserInfo" parameterType="String" resultMap="userResultMap">
		select * from userInfo where id=#{id javaType=String }
	</select>
	
	<insert id="insertUser" parameterType="com.spring.jamplan.model.UserVO">
		select * from userInfo where id=#{id javaType=String }
	</insert>
</mapper>

